<?xml version="1.0" encoding="utf-8" ?> 

<configuration>

    <configSections>
        <section name="monoRail"
                 type="Castle.MonoRail.Engine.Configuration.MonoRailSectionHandler, Castle.MonoRail.Engine" />
        <section name="activerecord"
                 type="Castle.ActiveRecord.Framework.Config.ActiveRecordSectionHandler, Castle.ActiveRecord" />
    </configSections>
    
    <activerecord>
      
		<config>
			<add key="hibernate.connection.driver_class" value="NHibernate.Driver.SqlClientDriver" />
			<add key="hibernate.dialect"                 value="NHibernate.Dialect.MsSql2000Dialect" />
			<add key="hibernate.connection.provider"     value="NHibernate.Connection.DriverConnectionProvider" />
			<add key="hibernate.connection.connection_string" value="Data Source=.;Initial Catalog=db_movies;User ID=sa;PWD=lock" />
		</config>
      
    </activerecord>

    <monoRail>
        <controllers>
            <assembly>MoviesDemo</assembly>
        </controllers>
        <viewEngine 
            viewPathRoot="views" 
            customEngine="Castle.MonoRail.Framework.Views.NVelocity.NVelocityViewEngine, Castle.MonoRail.Framework.Views.NVelocity" />
    </monoRail>

    <system.web>
        <httpHandlers>
            <add verb="*" path="*.rails" 
              type="Castle.MonoRail.Engine.MonoRailHttpHandlerFactory, Castle.MonoRail.Engine" />
        </httpHandlers>
    </system.web>

</configuration>