<?xml version="1.0" encoding="utf-8" ?> 

<configuration>

    <configSections>
        <section name="monoRail"
                 type="Castle.MonoRail.Engine.Configuration.MonoRailSectionHandler, Castle.MonoRail.Engine" />

		<section name="castle" 
                 type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
    </configSections>

	<monoRail useWindsorIntegration="true">
        <!-- If you'd like to use the controller directly: -->
		<!-- <controllers assembly="Castle.Applications.PestControl.Web" /> -->
		<viewEngine viewPathRoot="views" />
	</monoRail>

	<castle>
		<facilities>
			<facility id="prevalence">
				<engines>
					<engine 
						id="prevalenceengine"
						autoVersionMigration="true" 
						storageDir="../../storage" 
						systemId="pestcontrolModel" 
						systemType="Castle.Applications.PestControl.Model.PestControlModel, Castle.Applications.PestControl" />
				</engines>
			</facility>
		</facilities>
		
		<components>

		</components>

	</castle>

    <system.web>
        <httpHandlers>
            <add verb="*" path="*.rails" 
               type="Castle.MonoRail.Engine.MonoRailHttpHandlerFactory, Castle.MonoRail.Engine" />
        </httpHandlers>
    </system.web>

<!--
	<location path="project">
		<system.web>
			<authorization>
				<deny users="?"/>
			</authorization>
		</system.web>
	</location>
-->

</configuration>
