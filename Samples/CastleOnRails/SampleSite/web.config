<?xml version="1.0" encoding="utf-8" ?> 

<configuration>

    <configSections>
        <section name="rails"
                 type="Castle.CastleOnRails.Engine.Configuration.RailsSectionHandler, Castle.CastleOnRails.Engine" />
    </configSections>

    <rails>
		<!-- The CompositeViewEngine allows you to use Webforms (aspx) and NVelocity views -->
		<viewEngine 
			viewPathRoot="Views" 
			customEngine="Castle.CastleOnRails.Framework.Views.CompositeView.CompositeViewEngine, Castle.CastleOnRails.Framework.Views.CompositeView" />
		<controllers>
			<assembly>SampleSite</assembly>
		</controllers>
    </rails>

    <system.web>
        <httpHandlers>
            <add verb="*" path="*.rails" 
               type="Castle.CastleOnRails.Engine.RailsHttpHandlerFactory, Castle.CastleOnRails.Engine" />
        </httpHandlers>
    </system.web>

</configuration>
