<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="Content-Language" content="en">
    <title>${blog.name}</title>

    <link rel="stylesheet" type="text/css" href="/css/base.css" />
    <link rel="stylesheet" type="text/css" href="/css/theme.css" />
    <style type="text/css">
    </style>
    <script type="text/javascript" src="/theme/scripts/roller.js"></script>
</head>

<body>
  <table border="0" cellspacing="0" cellpadding="0" width="100%">
     <tbody>
        <tr>
           <td width="100%" bgcolor="#666666">
           </td>
        </tr>
        <tr>
           <td width="100%" bgcolor="#ffffff">
           </td>
        </tr>
        <tr>
           <td class="title" width="100%" bgcolor="#cccc99" valign="top">${blog.name}<br>
             <font class="descrip">${blog.description}</font>
           </td>
        </tr>
        <tr>
           <td width="100%" bgcolor="#000000">
           </td>
        </tr>
     </tbody>
  </table>

  <table border="0" cellspacing="0" cellpadding="0" width="100%">
     <tbody>
        <tr>
           <td valign="top" width="555" class="body">
<br />

<p>
   <h3>${lastpost.title}</h3>
   
   <div>
   ${lastpost.contents}
   </div>
 
   <span class="dateStamp">(First Published at ${lastpost.date})</span>
   
</p>
    
           </td>

           <td width="1" bgcolor="#000000" rowspan="2">
           </td>

           <td valign="top" width="175">

              <table border="0" cellspacing="0" cellpadding="0"
              width="100%">
                 <tbody>
                    <tr>
                       <td bgcolor="#cccccc">
                       </td>
                    </tr>
                 </tbody>
              </table>

              <table border="0" cellspacing="0" cellpadding="0" width="100%">

                 <tbody>
                    <tr>
                       <td bgcolor="#cccccc"><font class="
                       subhead">Links</font></td>
                    </tr>
                    <tr>
                       <td bgcolor="#000000">
                       </td>
                    </tr>
                    <tr>
                       <td>
<ul>
	<li><a id="MyLinks1_HomeLink" href="/${blog.author.login}/view.rails">Home</a></li>
	<li><a id="MyLinks1_Admin" href="/account/authentication.rails">Login</a></li>
	<li><a id="MyLinks1_HomeLink" href="/${blog.author.login}/view.rails?printable=true">Printable</a></li>
</ul>
                       </td>
                    </tr>
                 </tbody>

              </table>


              <table border="0" cellspacing="0" cellpadding="0" width="100%">

                 <tbody>
                    <tr>
                       <td bgcolor="#cccccc"><font class="
                       subhead">Old posts</font></td>
                    </tr>
                    <tr>
                       <td bgcolor="#000000">
                       </td>
                    </tr>
                    <tr>
                       <td>
<ul>
#foreach( $entry in $posts )
	<li><a href="view.rails?entryid=$entry.id">$entry.title</a> </li>
#end
</ul>
                       </td>
                    </tr>
                 </tbody>

              </table>
           </td>

           <td width="1" bgcolor="#000000" rowspan="2">
           </td>

           <td bgcolor="#aaaaaa" rowspan="2">
           </td>
        </tr>

        <tr>
           <td width="375">
           </td>
           <td width="175" bgcolor="#666666">
           </td>
        </tr>

        <tr>
           <td colspan="5" bgcolor="#999999">

           </td>
        </tr>

     </tbody>
  </table>
  <br>
  <br>
  <br>
  <br>

</body>
</html>
