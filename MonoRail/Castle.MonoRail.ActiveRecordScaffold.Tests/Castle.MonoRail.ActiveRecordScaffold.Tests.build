<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.MonoRail.ActiveRecordScaffold.Tests"
	default="test"
	xmlns="http://nant.sf.net/release/0.85-rc4/nant.xsd"
>

	<property name="root.dir" value="../.." />
	<include buildfile="${root.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="activerecord.test" value="true" unless="${property::exists('activerecord.test')}" />
		<property name="common.run-tests" value="${activerecord.test}" />

		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="nunit.framework.dll" />
			<include name="Castle.MonoRail.TestSupport.dll" />
			<include name="Castle.MonoRail.Framework.Tests.dll" />
			<include name="Castle.ActiveRecord.dll" />
			<include name="Iesi.Collections.dll" />
			<include name="TestScaffolding.dll" />
			<include name="NHibernate.dll" />
			<include name="Castle.Components.Binder.dll" />
			<include name="Castle.Components.Common.TemplateEngine.dll" />
			<include name="Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.dll" />
			<include name="Castle.MonoRail.ActiveRecordScaffold" />
		</assemblyfileset>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />

	<target name="test" depends="init generate-assemblyinfo common.compile-tests common.run-tests" description="Runs the tests" />

</project>
