<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
        <section name="castle"
                 type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
    </configSections>
    
    <castle>
		<components>
			<component id="SimpleListener">
				<listeners>
					<listener publisherId="SimplePublisher" listening="Event" handler="OnPublish"/>
				</listeners>
			</component>
			
			<component id="MultiListener">
				<listeners>
						<listener 
							publisherId="MultiPublisher" 
							handler="OnPublish" 
							listening="Event1"  />
						<listener 
							publisherId="MultiPublisher" 
							handler="OnPublish2" 
							listening="Event2"  />
						<listener 
							publisherId="PublisherListener" 
							handler="OnPublish"
							listening="Event1" />
					</listeners>
			</component>
			
			<component id="BadConfig">
				<listeners>
					<listener publisherId="SimplePublisher" listening="Iahhhhh" handler="OnPublish"/>
				</listeners>
			</component>
			
			<component id="PublisherListener">
				<listeners>
					<listener publisherId="SimplePublisher" handler="OnPublish" listening="Event" />
				</listeners>
			</component>
		</components>
	</castle>
	
</configuration>
