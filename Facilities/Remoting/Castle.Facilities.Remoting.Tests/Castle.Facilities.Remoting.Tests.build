<?xml version="1.0" ?>

<project 
	name="Castle.Facilities.Remoting.Tests" 
	default="test" 
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="root.dir" value="../../.." />

	<property name="common.testrunner.args" value="/process:Separate" />

	<include buildfile="${root.dir}/common-project.xml" />
	
	<target name="init" depends="common.init">
		<property name="assembly.version" value="1.0.3.0" />

		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="nunit.framework.dll"/>
			<include name="Castle.Facilities.Remoting.TestComponents.dll" />
			<include name="System.Configuration.dll" />
			<include name="Castle.Core.dll" />
			<include name="Castle.MicroKernel.dll" />
			<include name="Castle.Windsor.dll" />			
		</assemblyfileset>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />

	<target name="test" depends="init generate-assemblyinfo common.compile-tests common.run-tests" description="Runs the tests" />

</project>