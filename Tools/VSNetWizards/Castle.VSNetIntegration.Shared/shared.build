<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.VSNetIntegration.Shared"
	default="build"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="root.dir" value="../../.." />
	<include buildfile="${root.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="assembly.version" value="1.0.3.0" />
		<property name="assembly.description" value="Castle Project Visual Studio Integration Shared Lib" />
		<property name="assembly.copyright" value="Copyright (c) 2004,2005,2006 Castle Project - http://www.castleproject.org" />
		<property name="assembly.allow-partially-trusted-callers" value="true" />
		
		<property name="assembly.is-cls-compliant" value="false" />
		<property name="assembly.is-com-visible" value="false" />

		<if test="${nant.settings.currentframework=='net-1.1'}">
			<property name="extensibility.dll.dir" value="${environment::get-variable('DevEnvDir')}" />
			<property name="public.dll.dir" value="${environment::get-variable('DevEnvDir')}\PublicAssemblies" />
			<property name="envdte.dll.dir" value="" />
		</if>
		
		<if test="${nant.settings.currentframework=='net-2.0'}">
			<property name="extensibility.dll.dir" value="${environment::get-variable('DevEnvDir')}" />
			<property name="public.dll.dir" value="${environment::get-variable('DevEnvDir')}\PublicAssemblies" />
			<property name="envdte.dll.dir" value="${public.dll.dir}\" />
		</if>
		
		<fileset id="project.sources">
			<include name="${src.dir}/**/*.cs" />
		</fileset>

		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="System.Drawing.dll" />
			<include name="System.Windows.Forms.dll" />
			<include name="System.Xml.dll" />
			<include name="${envdte.dll.dir}EnvDTE.dll" />
			<include name="${public.dll.dir}\Extensibility.dll" />
			<include name="${public.dll.dir}\VSLangProj.dll" />
			<include name="${public.dll.dir}\VSLangProj2.dll" />
			
			<!--
			C:\WINDOWS\Microsoft.NET\Framework\v1.1.4322\EnvDTE.dll
			C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE\PublicAssemblies\Extensibility.dll
			C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE\PublicAssemblies\VSLangProj.dll
			C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE\PublicAssemblies\VSLangProj2.dll
			-->
		</assemblyfileset>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />

	<target name="build" description="Build ${project::get-name()}" depends="generate-assemblyinfo common.compile-dll" />

</project>
