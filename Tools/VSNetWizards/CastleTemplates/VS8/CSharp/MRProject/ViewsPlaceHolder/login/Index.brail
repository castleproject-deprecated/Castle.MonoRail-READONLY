<h2>Please enter your username and password</h2>

${Form.FormTag({@action: 'Authenticate'})}

<table>
	<tr>
		<th>Username:</th>
		<td>${Form.TextField("username")}</td>
	</tr>

	<tr>
		<th>Password: </th>
		<td>${Form.PasswordField("password")}</td>
	</tr>

	<tr>
		<th>Auto Login:</th>
		<td>${Form.CheckboxField("autoLogin")}</td>
	</tr>

	<tr>
		<td colspan="2" align="right">
			${Form.Submit("Log in")}
		</td>
	</tr>
</table>

${Form.EndFormTag()}