	<target name="build" depends="clean, init, tools, container, components, services, activerecord, monorail, aspectsharp, facilities, samples" />

	<target name="clean">
		<delete dir="${build.dir}" failonerror="false" />
	</target>
	
	<target name="init">
		<mkdir dir="${build.dir}" />
		<call target="copydistdependencies" />
